{
  "name": "train_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "Noise",
        "args": {
         "p": 0.1
        }
      },
      {
        "type": "PitchShift",
        "args": {
          "sr": 16000,
          "n_step": -3,
          "p": 0.1
        }
      },
      {
        "type": "Volume",
        "args": {
          "gain": 1.1,
          "gain_type": "amplitude",
          "p": 0.1
        }
      }
    ],
    "spectrogram": [
      {
        "type": "TimeStretching",
        "args": {
          "n_freq": 128,
          "fix_rate": 1.2,
          "p": 0.1
        }
      }
    ]
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 128,
      "hidden_size": 512,
      "context_size": 80
    }
  },
  "data": {
    "train": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4,
      "weight_decay": 0.01
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam search)"
      }
    },
    {
      "type": "BeamSearchCERMetricWithLm",
      "args": {
        "name": "CER (beam search with lm)"
      }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam search)"
      }
    },
    {
      "type": "BeamSearchWERMetricWithLm",
      "args": {
        "name": "WER (beam search with lm)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 20,
      "epochs": 20,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 20,
    "save_dir": "saved_360/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project_360",
    "grad_norm_clip": 10
  },
  "beam_search": {
    "len_lm_path": "asr/kenlm_model.arpa"
  }
}
